<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/png" href="https://drive.google.com/uc?export=view&id=129_JKrVi3IJ6spDDciA5Y5sm4pjUF7eI"/>

    <title><%- pageTitle %></title>

    <link rel="stylesheet" type="text/css" href="/stylesheet.css">
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="page-content">
        <h1><%- user.tag %>'s servers</h1>
        <br>
        <% guilds.forEach(guild => { %>
          <% if((guild.permissions & 0x20) == 0x20){ %>
            <div class="server-div">
              <% if(guild.icon) { %>
                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>" width="128px" height="128px" class="icon">
              <% } else { %>
                <img src="https://icon-library.com/images/discord-icon-color/discord-icon-color-22.jpg" width="128px" height="128px" class="icon">
              <% } %>
                <h5><%- guild.name %></h5>
              <% if(!discordClient.guilds.cache.has(guild.id)) { %>
                <a href="https://discordapp.com/api/oauth2/authorize?client_id=808613132850561055&redirect_uri=https://www.aunbot.tk/authorize/callback&response_type=code&scope=bot&guild_id=<%- guild.id %>"><h5 class="button-invite">Invite</h5></a>
              <% } else { %>
                <a href="/server?id=<%= guild.id %>"><h5 class="button-manage">Manage</h5></a>
              <% } %>
            </div>
          <% } %>
        <% }) %>
    </div>
</body>
</html>